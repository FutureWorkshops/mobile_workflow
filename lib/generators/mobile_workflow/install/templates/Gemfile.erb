source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.6.6'

# Core Gems
gem 'rails', '~> 6.0.2', '>= 6.0.2.2'
gem 'puma', '~> 4.1'
gem 'sass-rails', '>= 6'
gem 'turbolinks', '~> 5'
gem 'bootsnap', '>= 1.4.2', require: false

# Mobile Workflow
#gem 'mobile_workflow', path: '../mobile_workflow'
gem 'mobile_workflow', github: 'FutureWorkshops/mobile_workflow'

# Authorisation / Authentication
<%- if options[:doorkeeper_oauth] %>
gem 'doorkeeper'
gem 'bcrypt-ruby'
<%- end %>
gem 'cancancan', '~> 3.1'

# Admin console
gem 'administrate', '~> 0.13.0'
gem 'administrate-field-active_storage'
gem 'administrate-field-enum'

<%- if options[:s3_storage] %>
# Backend storage for S3
gem "image_processing"
gem 'aws-sdk-s3', '~> 1.60', '>= 1.60.1'
gem 'aws-sdk-sns', '~> 1.23'
<%- end %>

group :development do
  gem 'web-console', '>= 3.3.0'
  gem 'listen', '>= 3.0.5', '< 3.2'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails', '~> 4.0.0'
  gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
  gem 'dotenv-rails'
  gem 'factory_bot_rails'
end

group :production do
  gem 'pg', '>= 0.18', '< 2.0'
end